<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/minimumMargin"
    android:id="@+id/srlHome">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containerHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/btHomeActualMatch"
            style="@style/DefaultButtonTheme"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:cardCornerRadius="@dimen/default_radius"
            app:layout_constraintEnd_toEndOf="@id/containerHome"
            app:layout_constraintStart_toStartOf="@id/containerHome"
            app:layout_constraintTop_toTopOf="@id/containerHome">


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvTitleList"
            style="@style/HeaderText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_title_size"
            android:text="@string/header_home"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btHomeActualMatch" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvHistoryMatches"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/defaultMargin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTitleList"
            tools:listitem="@layout/adapter_home" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>