<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DefaultTextInputTheme" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/colorBackgroundText</item>
        <item name="boxCornerRadiusTopStart">4dp</item>
        <item name="boxCornerRadiusTopEnd">4dp</item>
    </style>

    <style name="DefaultButtonTheme" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="HeaderText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SubtitleText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/default_subtitle_size</item>
    </style>
</resources>